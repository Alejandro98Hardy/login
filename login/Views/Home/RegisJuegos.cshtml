
@{
    ViewBag.Title = "RegisJuegos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <header class="masthead">

        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <section class="formlogin" id="loginForm">

                        <h4 class="text-uppercase text-white-75 font-weight-light mb-5">Alta de juegos.</h4>
                        <hr class="divider my-4" />

                        <div class="form-label-group">
                            <label style="color:white;">Nombre del juego</label>

                        </div>
                        <div class="form-label-group">

                            <input class="form-label-group form-control" type="text" name="Correo" placeholder="Ingresa el nombre del juego">
                        </div>
                        <div class="form-label-group">
                            <label style="color:white;">Genero del juego</label>

                        </div>
                        <div class="form-label-group">

                            <input class="form-label-group form-control" type="text" name="Correo" placeholder="Ingresa el genero">
                        </div>
                        <div class="form-label-group">
                            <label style="color:white;">Empresa desarrolladora del juego</label>

                        </div>
                        <div class="form-label-group">

                            <input class="form-label-group form-control" type="text" name="Correo" placeholder="Ingresa la empresa">
                        </div>
                        <div class="form-label-group">
                            <label style="color:white;">Precio</label>

                        </div>
                        <div class="form-label-group">

                            <input class="form-label-group form-control" type="text" name="Correo" placeholder="Ingresa el precio">
                        </div>
                        <div class="form-group">
                            <div class="form-label-group">
                                <h4 class="form-group" style="text-align: center; left: 100px;">
                                    <input type="submit" class="inputsubmit form-group" value="Registrar" />
                                </h4>
                            </div>
                        </div>
                        }

                    </section>
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <hr class=" my-4" />
                </div>
            </div>
        </div>
    </header>