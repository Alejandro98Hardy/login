@model IEnumerable<login.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="masthead">

<div class="container h-100">
    <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
            <section class="formlogin" id="loginForm">
                <h4 class="text-uppercase text-white-75 font-weight-light mb-5">Crea una nuevo usuario</h4>
                <hr class="divider my-4" />
                <p>
                    @Html.ActionLink("Nuevo usuario", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th style="color:white;">
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="color: white;">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </section>
</div>
</div>
</div>
</header>


