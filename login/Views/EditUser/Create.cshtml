@model login.Models.RegisterViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <header class="masthead">

        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <section class="formlogin" id="loginForm">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-label-group">
                                <h4 style="color:white">Crear nuevo usuario </h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-label-group" style="color: white;">

                                    @Html.LabelFor(model => model.Email, new { @class = "" })
                                    <div class="form-label-group">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                    </div>

                                </div>
                                <div class="form-label-group" style="color:white;">
                                    @Html.LabelFor(model => model.Password, new { @class = "" })
                                    <div class="form-label-group">
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-label-group" style="color:white;">
                                    @Html.LabelFor(model => model.ConfirmPassword, new { @class = "" })
                                    <div class="form-label-group">
                                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-label-group">
                                    <label class="" style="color:white;">
                                        Select User Role
                                    </label>
                                    <div class="form-label-group" style="color:white;">
                                        @foreach (var item in (SelectList)ViewBag.RoleId)
                                        {
                                            <input type="checkbox" name="SelectedRoles" value="@item.Value" class="checkbox-inline" />
                                            @Html.Label(item.Value, new { @class = "" })
                                        }
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-label-group">
                                        <input type="submit" value="Crear" class="inputsubmit form-group" />
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="inputsubmit form-group">
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </section>
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <hr class=" my-4" />
                </div>
            </div>
            </div>
        </header>
