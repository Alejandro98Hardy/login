@model login.Models.RoleViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <header class="masthead">

        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <section class="formlogin" id="loginForm">
                        <h2 style="color:white;">Crear rol</h2>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4 style="color: white;">Crea un nuevo rol para el sitio.</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-label-group">
                                   
                                    <div class="form-label-group">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-label-group">
                                        <input type="submit" value="Create" class="inputsubmit form-group" />
                                    </div>
                                </div>
                                <div class="inputsubmit form-group">
                                    @Html.ActionLink("Regresar a la lista", "Index")
                                </div>
                            </div>
                        }
                    </section>
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <hr class=" my-4" />
                </div>
            </div>
            </div>

    </header>
        
