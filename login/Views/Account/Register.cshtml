@model login.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<header class="masthead">

    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <section class="formlogin" id="loginForm">

                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4 class="text-uppercase text-white-75 font-weight-light mb-5">Crea una nueva cuenta .</h4>
                        <hr class="divider my-4" />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <h3 lass="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </h3>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <h4 style="text-align: center; left: 100px;">
                                    <input type="submit" class="inputsubmit form-group" value="Registrarse" />
                                    </h4>
                            </div>
                        </div>
                    }

                </section>
            </div>
            <div class="col-lg-8 align-self-baseline">
                <hr class=" my-4" />
            </div>
        </div>
    </div>
</header>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
